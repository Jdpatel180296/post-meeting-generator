# Environment Variables Template
# Copy this to .env and fill in your actual values

# === Google OAuth (https://console.cloud.google.com/apis/credentials) ===
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:4000/oauth2callback
# In production, update GOOGLE_REDIRECT_URI to your domain (e.g., https://yourapp.com/oauth2callback)

# === LinkedIn OAuth (https://www.linkedin.com/developers/apps) ===
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_REDIRECT_URI=http://localhost:4000/api/auth/linkedin/callback
# In production: https://yourapp.com/api/auth/linkedin/callback

# === Facebook OAuth (https://developers.facebook.com/apps/) ===
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_REDIRECT_URI=http://localhost:4000/api/auth/facebook/callback
# In production: https://yourapp.com/api/auth/facebook/callback

# === External API Keys ===
# OpenAI (for post/email generation)
OPENAI_API_KEY=sk_test_your_key_here
# Recall.ai (for meeting recording bot)
RECALL_API_KEY=your_recall_api_key_here
# AssemblyAI (for transcription)
ASSEMBLY_API_KEY=your_assemblyai_key_here

# === PostgreSQL Database ===
PGHOST=localhost
PGPORT=5432
PGUSER=jaydeepgondaliya
PGPASSWORD=your_password_here
PGDATABASE=postmeeting

# === Server Config ===
PORT=4000
NODE_ENV=development
# Set to production when deploying

# === Poller Config ===
POLL_INTERVAL_MS=60000
# How often (in ms) to poll Recall.ai for transcript updates
